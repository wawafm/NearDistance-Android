<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>


    <style  name="rgsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/TextSize12</item>
        <item name="android:textColor">@color/radio_group_text_cheched</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="homePagerRadioStyle">
        <item name="android:button">@null</item> 
        <item name="android:gravity">center</item>
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:drawableLeft">@drawable/home_pager_radio_checked</item>
    </style>
    
    <style name="InteractNameTextStyle">
        <item name="android:textSize">@dimen/TextSize12</item>
        <item name="android:textColor">@color/radioGroupTextColor</item>
    </style>
</resources>
