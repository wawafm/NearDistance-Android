<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="popupwindowStyle">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>
    
    <style name="ConfirmDialog">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="NotTitleBarDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="ConfirmDialogTitle">
        <item name="android:textSize">@dimen/TextSize15</item>
        <item name="android:textColor">@color/w3_03</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/DialogHeaderHeight</item>
        <item name="android:layout_marginLeft">@dimen/LargePadding</item>
        <item name="android:layout_marginRight">@dimen/LargePadding</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ShareDialog" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/toumingse</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>  
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="ThirdShareItem">
        
        <item name="android:textSize">@dimen/TextSize12</item>
        <item name="android:textColor">@color/w3_04</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style  name="rgsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/TextSize12</item>
        <item name="android:textColor">@color/radio_group_text_cheched</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="homePagerRadioStyle">
        <item name="android:button">@null</item> 
        <item name="android:gravity">center</item>
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:drawableLeft">@drawable/home_pager_radio_checked</item>
    </style>
    
    <style name="InteractNameTextStyle">
        <item name="android:textSize">@dimen/TextSize12</item>
        <item name="android:textColor">@color/radioGroupTextColor</item>
    </style>
</resources>
