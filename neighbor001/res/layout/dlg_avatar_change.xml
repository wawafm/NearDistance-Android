<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ddffffff"
	android:orientation="vertical" >
	<TextView 
	    android:id="@+id/layoutUp"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:text=""/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@color/white"
	    android:layout_marginBottom="10dp" 
	    android:paddingBottom ="10dp">
		<TextView
			android:id="@+id/shareTitle"
			android:layout_width="match_parent"
			android:layout_height="48dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:layout_gravity="center_horizontal"
			android:background="@color/white"
			android:gravity="center"
			android:drawablePadding="6dp"
			android:text="设置头像"
			android:textColor="@color/w3_04"
			android:textSize="13dp" />
		
		<LinearLayout
		    android:background="@color/white"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:minHeight="90dip"
			android:orientation="horizontal" >
			<TextView
				android:id="@+id/btnCarmer"
				style="@style/ThirdShareItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:drawablePadding="6dp"
				android:drawableTop="@drawable/btn_take_carmer"
				android:gravity="center_horizontal"
				android:text="拍摄" 
				android:textSize="12dp"/>
			<TextView
				android:id="@+id/btnPhoto"
				style="@style/ThirdShareItem"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:drawablePadding="6dp"
				android:drawableTop="@drawable/btn_take_photo"
				android:gravity="center_horizontal"
				android:text="相册" 
				android:textSize="12dp"/>
			
		</LinearLayout>
		<View 
		    android:layout_width="match_parent"
		    android:layout_height="0.33dp"
		    android:background="@color/lineBg"
		    />
		<Button
			android:id="@+id/cancel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:gravity="center"
			android:minHeight="48dp"
			android:text="取消"
			android:textSize="13dp"
			android:textColor="@color/w3_03" />
	</LinearLayout>
</LinearLayout>