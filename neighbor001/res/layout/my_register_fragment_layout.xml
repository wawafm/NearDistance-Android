<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/dengluditu" >
    
    <ImageView 
        android:id="@+id/registerImgage"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_marginTop="100dp"
        android:src="@drawable/denglulogo"
        />
    <LinearLayout 
        android:layout_marginTop="35dp"
        android:layout_width="@dimen/loginEditWidth"
        android:layout_height="@dimen/loginEditheight"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize12"
            />
        <EditText 
            android:layout_marginLeft="15dp"
	        android:id="@+id/registerUserName"
	        android:background="@null"
	        android:gravity="center|left"
	        android:textCursorDrawable="@color/white"
	        android:layout_width="@dimen/loginEditWidth"
	        android:layout_height="@dimen/loginEditheight"
	        android:singleLine="true"
	        android:textColor="@color/white"
	        />
    </LinearLayout>
    <View
        android:layout_width="@dimen/loginEditWidth"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <LinearLayout 
        android:layout_marginTop="35dp"
        android:layout_width="@dimen/loginEditWidth"
        android:layout_height="@dimen/loginEditheight"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize12"
            />
       	<EditText 
       	    android:layout_marginLeft="15dp"
	        android:id="@+id/registerUserCaptcha"
	        android:background="@null"
	        android:gravity="center|left"
	        android:textCursorDrawable="@color/white"
	        android:layout_width="@dimen/reqisterEditWidth"
	        android:layout_height="@dimen/loginEditheight"
	        android:singleLine="true"
	        android:textColor="@color/white" />

       	<TextView
       	    android:background="@drawable/my_share_file"
       	    android:id="@+id/userCaptchaBack"
       	    android:layout_marginBottom="2dp"
       	    android:layout_width="67dp"
       	    android:gravity="center"
       	    android:layout_gravity="center|bottom"
       	    android:layout_height="20dp"
       	    android:layout_marginLeft="11dp"
       	    android:text="获取验证码"
       	    android:textColor="@color/white"
       	    android:textSize="@dimen/TextSize10" />

    </LinearLayout>
    <View
        android:layout_width="@dimen/loginEditWidth"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <LinearLayout 
        android:layout_marginTop="35dp"
        android:layout_width="@dimen/loginEditWidth"
        android:layout_height="@dimen/loginEditheight"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="@color/white"
            android:textSize="@dimen/TextSize12"
            />
       	<EditText 
       	    android:layout_marginLeft="15dp"
	        android:id="@+id/registerUserPassWord"
	        android:background="@null"
	        android:textCursorDrawable="@color/white"
	        android:gravity="center|left"
	        android:layout_width="@dimen/loginEditWidth"
	        android:layout_height="@dimen/loginEditheight"
	        android:password="true"
	        android:singleLine="true"
	        android:textColor="@color/white" />
       	 
    </LinearLayout>
    <View
        android:layout_width="@dimen/loginEditWidth"
        android:layout_height="1dp"
        android:background="@color/white"
        />

    <Button
        android:layout_marginTop="35dp" 
        android:id="@+id/registerUserBtn"
        android:background="@drawable/login_btn"
        android:layout_width="@dimen/loginEditWidth"
        android:layout_height="@dimen/loginEditheight"
        android:textSize="@dimen/TextSize16"
        android:textColor="@color/white"
        android:text="登录"
        />
</LinearLayout>
