<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/tuangouImg"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/img1"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        >
        <TextView
            android:id="@+id/tuanGouMsgTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/radioGroupTextColorDefalut"
            android:textSize="@dimen/TextSize14"
            android:text="佳味酸辣粉"
            />
        <TextView
            android:layout_below="@id/tuanGouMsgTitle"
            android:id="@+id/tuanGouMsgDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/homeTuanGouMsg9"
            android:textSize="@dimen/TextSize10"
            android:text="仅售12元，价值15元的代金券一份"
            />
        <TextView
            android:id="@+id/textDetail"
            android:layout_below="@id/tuanGouMsgDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/radioGroupTextColor"
            android:textSize="@dimen/TextSize12"
            android:text="了解详情"
            />
        <Button
            android:layout_marginLeft="50dp"
            android:layout_below="@id/tuanGouMsgDetail"
            android:layout_toRightOf="@id/textDetail"
            android:id="@+id/homeQiangGou"
            android:layout_width="48dp"
            android:layout_height="21dp"
            android:text="抢购"
            android:background="@color/radioGroupTextColor"
            android:textSize="@dimen/TextSize14"
            android:textColor="@color/white"
            />
    </RelativeLayout>
</LinearLayout>
